---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Seo from '../../components/Seo.astro';

import { getContent } from '../../lib/lang';// si tenés content para home
import type { Lang } from '../../lib/i18n';
import { loadPage } from '../../lib/pageLoader';

//To do: deberia levantar los idiomas de i18n.ts
export async function getStaticPaths() {
  return [
    { params: { lang: 'en' } },
    { params: { lang: 'es' } },
    { params: { lang: 'pt' } },
  ];
}

const { lang } = Astro.params;

// si querés podés traer contenido dinámico para home también
const content = await getContent(lang as Lang, 'home');

const Page = await loadPage('home', lang);
---

<BaseLayout lang={lang}>
  <Fragment slot="head">
    <Seo
      title={content.title ?? 'Home | Binit'}
      description={content.description ?? 'Default description'}
      keywords="Binit, Innovation, Technology"
      url="https://binit.tech/"
      image="/home.jpg"
    />
  </Fragment>

  <Page lang={lang} content={content} />

</BaseLayout>
