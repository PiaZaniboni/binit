---
import '../styles/global.scss';

import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const { lang } = Astro.props;
---

<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <slot name="head" />

    <link rel="icon" href={`${Astro.site}/img/favicon-binit.webp`}  type="image/webp">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

    <!-- <link rel="stylesheet" href={`${Astro.site}/styles/global.css`} />-->
    <link href="https://fonts.googleapis.com/css2?family=Titillium+Web:ital,wght@0,300;0,400;0,600;0,700;1,300;1,400;1,600&display=swap" rel="stylesheet">

    <!--Carousel -->
    <link rel="stylesheet" href={`${Astro.site}/styles/splide.min.css`} />
  </head>
  <body>
    <Header lang={lang} currentPath={Astro.url.pathname} />
    <main>
      <div>
        <slot />
      </div>
    </main>

    <Footer lang={lang} />
  </body>
  <script src={`${Astro.site}/js/splide.min.js`} is:inline></script>
  <script src={`${Astro.site}/js/script.js`} is:inline defer></script> <!--Solo cargar en la home? -->
</html>
